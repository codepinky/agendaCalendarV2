# Firebase Configuration
FIREBASE_PROJECT_ID={{ firebase_project_id }}
FIREBASE_PRIVATE_KEY="{{ firebase_private_key }}"
FIREBASE_CLIENT_EMAIL={{ firebase_client_email }}

# Google Calendar OAuth 2.0 (Opcional)
{% if google_client_id %}GOOGLE_CLIENT_ID={{ google_client_id }}{% endif %}
{% if google_client_secret %}GOOGLE_CLIENT_SECRET={{ google_client_secret }}{% endif %}
{% if google_redirect_uri %}GOOGLE_REDIRECT_URI={{ google_redirect_uri }}{% endif %}

# Server Configuration
PORT=3000
NODE_ENV=production
CORS_ORIGIN={{ cors_origin }}

# N8N Webhook (Opcional)
{% if n8n_webhook_url %}N8N_WEBHOOK_URL={{ n8n_webhook_url }}{% endif %}

# Webhook Security (for n8n â†’ backend communication)
{% if webhook_bridge_secret %}WEBHOOK_BRIDGE_SECRET={{ webhook_bridge_secret }}{% endif %}


